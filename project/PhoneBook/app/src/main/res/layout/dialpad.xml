<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.333"
            android:id="@+id/dialpad_one"
            android:text="1"
            android:textSize="40dp"
            android:textAlignment="center"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.333"
            android:id="@+id/dialpad_two"
            android:text="2"
            android:textSize="40dp"
            android:textAlignment="center"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.333"
            android:id="@+id/dialpad_three"
            android:text="3"
            android:textSize="40dp"
            android:textAlignment="center"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.333"
            android:id="@+id/dialpad_four"
            android:text="4"
            android:textSize="40dp"
            android:textAlignment="center"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.333"
            android:id="@+id/dialpad_five"
            android:text="5"
            android:textSize="40dp"
            android:textAlignment="center"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.333"
            android:id="@+id/dialpad_six"
            android:text="6"
            android:textSize="40dp"
            android:textAlignment="center"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.333"
            android:id="@+id/dialpad_seven"
            android:text="7"
            android:textSize="40dp"
            android:textAlignment="center"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.333"
            android:id="@+id/dialpad_eight"
            android:text="8"
            android:textSize="40dp"
            android:textAlignment="center"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.333"
            android:id="@+id/dialpad_nine"
            android:text="9"
            android:textSize="40dp"
            android:textAlignment="center"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.333"
            android:id="@+id/dialpad_star"
            android:text="*"
            android:textSize="40dp"
            android:textAlignment="center"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.333"
            android:id="@+id/dialpad_zero"
            android:text="0"
            android:textSize="40dp"
            android:textAlignment="center"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.333"
            android:id="@+id/dialpad_well"
            android:text="#"
            android:textSize="40dp"
            android:textAlignment="center"/>
    </TableRow>
    <TableRow>
        <ImageView
            android:id="@+id/dialpad"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.333"/>
    </TableRow>
</TableLayout>