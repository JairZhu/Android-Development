<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.isszym.progess.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SeekBar"
        android:id="@+id/textView6"
        android:labelFor="@+id/ratingBar"
        android:layout_marginTop="47dp"
        android:textSize="18dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RatingBar"
        android:textSize="18dp"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/ratingBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:labelFor="@+id/ratingBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SeekBar"
        android:textSize="18dp"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/seekBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:labelFor="@+id/seekBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ProgressBar(hor)"
        android:textSize="18dp"
        android:id="@+id/textView3"
        android:layout_above="@+id/seekBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:labelFor="@+id/progressBar2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ProgressBar"
        android:textSize="18dp"
        android:id="@+id/textView2"
        android:labelFor="@+id/progressBar" />

    <SeekBar
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="7"
        android:layout_marginTop="70dp"
        android:id="@+id/seekBar"
        android:layout_below="@+id/progressBar2"
        android:layout_alignLeft="@+id/progressBar2"
        android:layout_alignStart="@+id/progressBar2"
        android:layout_width="160dp" />

    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="7"
        android:id="@+id/progressBar"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <ProgressBar
        style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="7"
        android:layout_marginTop="27dp"
        android:id="@+id/progressBar2"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:scrollbarStyle="insideInset"
        android:layout_below="@+id/progressBar"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SeekBar"
        android:id="@+id/textView"
        android:labelFor="@+id/ratingBar"
        android:layout_marginTop="26dp"
        android:textSize="18dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:progressDrawable="@drawable/seekbar_light"
        android:thumb="@drawable/submit"
        android:maxHeight="4dp"
        android:minHeight="4dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/seekBar4"
        android:max="10"
        android:progress="7"
        android:layout_alignTop="@+id/textView6"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar5"
        android:max="10"
        android:progress="3"
        android:thumb="@drawable/seekbar_thumb"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignRight="@+id/seekBar4"
        android:layout_alignEnd="@+id/seekBar4"
        android:layout_alignLeft="@+id/seekBar4"
        android:layout_alignStart="@+id/seekBar4" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/ratingBar"
        android:layout_alignStart="@+id/ratingBar" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="3"
        android:numStars="5"
        android:stepSize="0.2"
        android:id="@+id/ratingBar"
        android:layout_above="@+id/textView4"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="4"
        android:numStars="5"
        android:stepSize="0.2"
        android:isIndicator="false"
        android:id="@+id/ratingBar2"
        android:layout_above="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginBottom="46dp" />


</RelativeLayout>
