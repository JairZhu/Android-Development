<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/changeform"
    android:padding="12dp">
    <TableRow android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0px"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:text="单词"
            android:textSize="18sp" />
        <EditText android:id="@+id/change_word"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:hint="请填写单词"
            android:padding="10dp"
            android:background="@drawable/edit_border"
            android:selectAllOnFocus="true"/>
    </TableRow>
    <TableRow android:paddingBottom="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:text="解释"
            android:textSize="18sp" />
        <EditText
            android:layout_height="90dp"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:minLines="5"
            android:gravity="top"
            android:hint="请填写解释"
            android:padding="10dp"
            android:background="@drawable/edit_border"
            android:id="@+id/change_explanation"/>
    </TableRow>
    <TableRow android:paddingBottom="10dp">
        <TextView android:text="级别"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"/>
        <EditText android:id="@+id/change_level"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:padding="10dp"
            android:background="@drawable/edit_border"
            android:hint="请填写难度(0~8)"/>
    </TableRow>
</TableLayout>